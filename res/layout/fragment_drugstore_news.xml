<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_padding_width"
    android:paddingRight="@dimen/activity_padding_width" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/yaofangxinxi1"
        android:scaleType="fitXY"
        android:layout_margin="3dp" />
	<ImageView
        android:id="@+id/store_offer_button"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:src="@drawable/yaofangxinxi2"
        android:scaleType="fitXY"
        android:layout_margin="3dp" />
	<ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:src="@drawable/yaofangxinxi3"
        android:scaleType="fitXY"
        android:layout_margin="3dp" />
</LinearLayout>
	