<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tab_bg_height"
    android:background="@drawable/tab_content_bg"
     >
    <LinearLayout
        android:id="@+id/linearLayout_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
         >
		<RelativeLayout 
		    android:layout_width="match_parent"
		    android:layout_height="@dimen/tab_button_height"
		    >

        <TextView
            android:id="@+id/tab3_welcome_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/tab3_login"
            android:gravity="center"
            android:text="尊敬的用户，您好！"
            android:textSize="15dp" />

        <Button
            android:id="@+id/tab3_login"
            android:layout_width="72dp"
            android:layout_height="38dp"
            android:layout_alignBaseline="@+id/tab3_welcome_text"
            android:layout_alignBottom="@+id/tab3_welcome_text"
            android:layout_alignParentRight="true"
            android:background="@layout/button_style"
            android:gravity="center"
            android:text="登录"
            android:textSize="@dimen/button_textsize" />

		</RelativeLayout>
        <Button
            android:id="@+id/user_info"
            android:layout_width="@dimen/tab_button_width"
            android:layout_height="@dimen/tab_button_height"
            android:background="@layout/tab_btn_press"
            android:text="个人信息"
            android:textSize="@dimen/button_textsize"
             />
	
        <Button
            android:id="@+id/change_pass"
            android:layout_width="@dimen/tab_button_width"
            android:layout_height="@dimen/tab_button_height"
            android:background="@layout/tab_btn_press"
            android:text="修改密码"
            android:textSize="@dimen/button_textsize" />

        <Button android:background="@layout/tab_btn_press"
            android:id="@+id/tab3_peopleinfo"
            android:layout_width="@dimen/tab_button_width"
            android:layout_height="@dimen/tab_button_height"
            android:gravity="center"
            android:text="健康卡管理"
            android:textSize="@dimen/button_textsize" />

        <Button android:background="@layout/tab_btn_press"
            android:id="@+id/tab3_bookinghist"
            android:layout_width="@dimen/tab_button_width"
            android:layout_height="@dimen/tab_button_height"
            android:gravity="center"
            android:text="我的预约"
            android:textSize="@dimen/button_textsize" />

        <Button android:background="@layout/tab_btn_press"
            android:id="@+id/tab3_showhist"
            android:layout_width="@dimen/tab_button_width"
            android:layout_height="@dimen/tab_button_height"
            android:gravity="center"
            android:text="名医收藏"
            android:textSize="@dimen/button_textsize" />

        <Button android:background="@layout/tab_btn_press"
            android:id="@+id/tab3_cleanDB"
            android:layout_width="@dimen/tab_button_width"
            android:layout_height="@dimen/tab_button_height"
            android:gravity="center"
            android:text="清理缓存"
            android:textSize="@dimen/button_textsize" />
        
        <Button android:background="@layout/tab_btn_press"
            android:id="@+id/tab3_settextsize"
            android:layout_width="@dimen/tab_button_width"
            android:layout_height="@dimen/tab_button_height"
            android:gravity="center"
            android:text="字体设置"
            android:visibility="gone"
            android:textSize="@dimen/button_textsize" />
    </LinearLayout>

</RelativeLayout>
