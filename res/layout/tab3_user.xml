<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >
	<TextView
        android:id="@+id/title_zhineng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="个人中心"
        android:textColor="@color/black"
        android:textSize="30sp" />
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="700dp"
        android:layout_height="900dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="100dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/tab3_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@layout/button_style"
            android:gravity="left"
            android:text="登录"
            android:textSize="@dimen/button_textsize" />
        

        <Button
            android:id="@+id/tab3_peopleinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@layout/button_style"
            android:gravity="left"
            android:text="健康卡管理"
            android:textSize="@dimen/button_textsize" />

        <Button
            android:id="@+id/tab3_bookinghist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@layout/button_style"
            android:gravity="left"
            android:text="我的预约"
            android:textSize="@dimen/button_textsize" />

        <Button
            android:id="@+id/tab3_showhist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@layout/button_style"
            android:gravity="left"
            android:text="个人收藏"
            android:textSize="@dimen/button_textsize" />

        <Button
            android:id="@+id/tab3_userchange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@layout/button_style"
            android:gravity="left"
            android:text="切换账号"
            android:textSize="@dimen/button_textsize" />

        <Button
            android:id="@+id/tab3_cleanDB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@layout/button_style"
            android:gravity="left"
            android:text="清除缓存"
            android:textSize="@dimen/button_textsize" />
        
        <Button
            android:id="@+id/tab3_settextsize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@layout/button_style"
            android:gravity="left"
            android:text="字体设置"
            android:visibility="gone"
            android:textSize="@dimen/button_textsize" />
    </LinearLayout>

    <TextView
        android:id="@+id/infos_text"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:text="尊敬的用户，欢迎您"
        android:gravity="center"
        android:textColor="@color/black"
         />

</RelativeLayout>
</ScrollView>