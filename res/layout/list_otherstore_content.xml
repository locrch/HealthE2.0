<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/list_otherstore_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/list_otherstore_phone"
        android:layout_below="@+id/list_otherstore_name"
        android:text="加载中..."
        android:textSize="15dp" />

    <TextView
        android:id="@+id/list_otherstore_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/list_otherstore_name"
        android:layout_below="@+id/list_otherstore_address"
        android:text="加载中..."
        android:textSize="15dp" />

    <TextView
        android:id="@+id/list_otherstore_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:text="加载中..."
        android:textSize="15dp" />

</RelativeLayout>