<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VersionInfoActivity" 
    
    >
    <TextView
        android:id="@+id/infos_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/seria_num"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        android:text="佛山市卫生局" />

    <TextView
        android:id="@+id/seria_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="72dp"
        android:text="Copyright@2013-2014" />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/version_info_logo_margintop"
        android:background="@drawable/ic_launcher" />

    
    <TextView
        android:id="@+id/verison_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/infos_text"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:text="V1.0" />

    <TextView
        android:id="@+id/verison_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/infos_text"
        android:textSize="12sp"
        android:text="build"
         />

</RelativeLayout>