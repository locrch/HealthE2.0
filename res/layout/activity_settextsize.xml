<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SetTextSizeActivity" 
    android:background="@drawable/background_black"
    >

    <Button
        android:id="@+id/text_size_big"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="53dp"
        android:background="@layout/button_style"
        android:text="大"
        android:textSize="30dp"
        android:gravity="left"
         />

    <Button
        android:id="@+id/text_size_normal"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/text_size_big"
        android:layout_below="@+id/text_size_big"
        android:layout_marginTop="22dp"
        android:background="@layout/button_style"
        android:gravity="left"
        android:text="中"
        android:textSize="20dp" />

    <Button
        android:id="@+id/text_size_small"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/text_size_normal"
        android:layout_below="@+id/text_size_normal"
        android:layout_marginTop="29dp"
        android:background="@layout/button_style"
        android:gravity="left"
        android:text="小"
        android:textSize="15dp" />

</RelativeLayout>
