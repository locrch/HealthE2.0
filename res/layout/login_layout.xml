<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_padding_width"
    android:paddingRight="@dimen/activity_padding_width" >

    <TextView
        android:id="@+id/infos_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/username"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="用户名："
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="5dp"
        android:layout_toRightOf="@+id/infos_text"
        android:digits="1234567890"
         android:inputType="number"
         android:hint="请输入本人手机号码"
        android:ems="10" 
        android:background="@layout/edittext_style"
        android:layout_marginTop="10dp">
        <requestFocus />
        </EditText>

    <CheckBox
        android:id="@+id/member_CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/password"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="29dp"
        android:text="记住用户名"
        android:visibility="invisible" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/password"
        android:layout_below="@+id/member_CheckBox"
        android:layout_marginTop="34dp"
        android:background="@layout/button_style"
        android:text="登录"
        android:textSize="@dimen/button_textsize" />

    <CheckBox
        android:id="@+id/auto_CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login_btn"
        android:layout_alignParentRight="true"
        android:layout_marginRight="35dp"
        android:text="自动登录"
        android:visibility="invisible" />

    <Button
        android:id="@+id/reg_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/login_btn"
        android:layout_alignBottom="@+id/login_btn"
        android:layout_alignLeft="@+id/auto_CheckBox"
        android:background="@layout/button_style"
        android:text="注册"
        android:textSize="@dimen/button_textsize" />

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/seria_num"
        android:layout_alignBottom="@+id/seria_num"
        android:layout_alignRight="@+id/username"
        android:layout_toRightOf="@+id/infos_text"
        android:background="@layout/edittext_style"
        android:ems="10"
        android:hint="请输入6位数密码"
        android:inputType="textPassword"
        android:paddingLeft="5dp" />

    <TextView
        android:id="@+id/seria_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/infos_text"
        android:layout_below="@+id/infos_text"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="密     码：" />

    <TextView
        android:id="@+id/for_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/reg_btn"
        android:layout_alignTop="@+id/auto_CheckBox"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="忘记密码了？"
        android:textColor="@color/red"
        android:textStyle="bold" />

</RelativeLayout>